<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hansung.android.ai_speaker_socket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MedicineAddPopUpActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity
            android:name=".MedicineEditActivity"
            android:label="@string/title_activity_medicine_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".DetailScrollingActivity" />
        <activity
            android:name=".SendMessagePopUpActivity"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" />
        <activity
            android:name=".AddCareMemberActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GetNameActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HealthInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CareMembersListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>